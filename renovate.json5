{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>soulwhisper/renovate-config",
  ],
  ignorePaths: [".archive/**"],
  customManagers: [
    {
      customType: "regex",
      description: "Process various dependencies in .dockerfile",
      fileMatch: ["\\.dockerfile$"],
      matchStrings: [
        // Newline
        '(?m:^[ \\t]*?# ?renovate: depName=(?<depName>\\S+)( datasource=(?<datasource>\\S+))?( versioning=(?<versioning>\\S+))?( extractVersion=(?<extractVersion>\\S+))?\\n[ \\t ]*?\\S+ = "?(?<currentValue>[^" ]+?)";?$)',
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      extractVersionTemplate: "{{#if extractVersion}}{{{extractVersion}}}{{else}}^(?<version>.*)${{/if}}",
    },
  ],
  packageRules: [
    {
      description: "Separate PR's per app",
      matchDatasources: ["docker"],
      additionalBranchPrefix: "{{parentDir}}-",
      semanticCommitScope: "{{parentDir}}",
    },
    {
      description: "Automerge image updates if tests pass",
      matchFileNames: ["apps/**/*.dockerfile"],
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
  ],
}